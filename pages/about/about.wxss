/* pages/about/about.wxss */
@import "../../common/common.wxss";
page{
  height: 100%;
  
}

.user{
  margin: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
 
}
.about-user-img{
  border-radius: 50%;
  width: 128rpx;
  height: 128rpx;
 
}
.nick-name{
  color: #aaa;
  margin-top: 10rpx;
  font-size: 30rpx;
}
.list-item{
  font-size: 28rpx;
  line-height: 80rpx;
  height: 80rpx;
  padding:0rpx 8rpx;
  position: relative;
  border-bottom: 1px solid #aaa;
}
.list-item-oder{
  border: none;
}
.list-item::after{
    position: absolute;
    right: 6rpx;
    top:30rpx;   
    transform:rotate(45deg);
}
/* 账户 */
.amount{
  margin-top: 30rpx;
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.amount .item{
  text-align: center;
  font-size: 30rpx;
  flex:0 0 30%;
}
.item view{
  margin-bottom: 8rpx;
}
.order-list{
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
}
.order-list>view{
  flex:0 0 30%;
  text-align: center;
  font-size: 24rpx;
  padding: 20rpx 0;
}
.order-list .fa{
  font-size: 50rpx;
  color: #fcae28;
}
.list-item-oder{
  font-size: 34rpx;
  border-bottom: 2rpx solid #fafafa;
}