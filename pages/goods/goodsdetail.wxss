/* pages/goods/goodsdetail.wxss */

@import "../../wxParse/wxParse.wxss";
@import "../../common/common.wxss";

.banners{
  height:562.5rpx;
}
swiper-item image{
  width: 100%;
  height:562.5rpx;
}
.detail-price{
  position: relative;
  line-height: 36rpx;
}
.good-new-price{
  color: red;
}
.good-old-price{
  color: #ccc;
  margin-left: 10rpx;
  text-decoration: line-through;
  font-size: 22rpx;
}
.line{
  height: 20rpx;
  background-color: #ccc
}
.price-title{
  padding: 40rpx;
}
.title{
  font-size: 28rpx;
}
.detail-price{
  font-size: 26rpx;
  margin-top: 14rpx;
}
.goods-show{
  padding: 20rpx;
}
.add-cart{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  font-size: 28rpx;
  background-color: #fafafa;
}
.fix-bottom{
  display: flex;
}
.fix-bottom>view{
  flex: 0 0 50%;
}
.right{
  line-height: 100rpx;
  display: flex;
}
.right>view{
  flex:0 0 50%;
  text-align: center;
  background-color: red;
  color: white;
}
.right>view:last-child{
  background-color: #ffb73a;
}
.left{
  font-size: 24rpx;
  height: 100rpx;
  display: flex;
}
.left>view{
  flex: 0 0 50%;
  text-align: center;
  margin-top: 16rpx;
}
.left>view:first-child{
  color: green;
}
.chose-number{
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  font-size: 24rpx;
}
.addcart{
  width: 100%;
}
.close{
  text-align: right;
  padding-right: 20rpx;
  font-size: 32rpx;
}
.number{
  display: flex;
}
.number view{
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  
  border: 2rpx solid #ccc;
}
.number input{
  width: 60rpx;
  height: 60rpx;
  line-height: 58rpx;
}
.number text{
  line-height: 60rpx;
  margin: 0 20rpx 0 50rpx;
}
.bk{
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(143, 142, 142, 0.7);
}
.collect{
  position: absolute;
  right: 10rpx;
  top:0;
  font-size: 36rpx;
}
.hascollect{
  color: red;
}
.kefu{
  position: relative;
}
.kefu button{
  position: absolute;
  width: 100%;
  height: 84rpx;
  top: 0;
  left: 0;
  opacity: 0;
}