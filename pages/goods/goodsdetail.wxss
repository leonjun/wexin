/* pages/goods/goodsdetail.wxss */

@import "../../wxParse/wxParse.wxss";
@import "../../common/common.wxss";

.banners{
  height:562.5rpx;
}
swiper-item image{
  width: 100%;
  height:562.5rpx;
}
.detail-price{
  position: relative;
}
.good-new-price{
  color: red;
}
.good-old-price{
  color: #ccc;
  margin-left: 10rpx;
  text-decoration: line-through;
  font-size: 22rpx;
}
.line{
  height: 20rpx;
  background-color: #ccc
}
.price-title{
  padding: 40rpx;
}
.title{
  font-size: 28rpx;
}
.detail-price{
  font-size: 26rpx;
  margin-top: 14rpx;
}
.goods-show{
  padding: 20rpx;
}
.add-cart{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  font-size: 28rpx;
  background-color: #fafafa;
}
.fix-bottom{
  display: flex;
}
.fix-bottom>view{
  flex: 0 0 50%;
}
.right{
  line-height: 100rpx;
  display: flex;
}
.right>view{
  flex:0 0 50%;
  text-align: center;
  background-color: red;
  color: white;
}
.right>view:last-child{
  background-color: #ffb73a;
}
.left{
  font-size: 24rpx;
  height: 100rpx;
  display: flex;
}
.left>view{
  flex: 0 0 50%;
  text-align: center;
  margin-top: 16rpx;
}