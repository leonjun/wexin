.addressLists{
  text-align: left;
  padding: 20rpx;
  font-size: 30rpx;
}
/* 底部新增 */
.bottomAdd{
  position: fixed;
  bottom: 0;
  line-height: 90rpx;
  height: 90rpx;
  font-size: 30rpx;
  border-top: 1px solid #ccc;
  width: 100%;
  padding-left: 20rpx;
  background-color: #fff;
  overflow: hidden
}

.triangle{
  position: absolute;
  display: inline-block;
    content: " ";
    height: 22rpx;
    width: 22rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color: #c7c7cc;
    border-style: solid;
  right: 48rpx;
  transform:rotate(45deg);
  top: 32rpx;
}
/* 地址列表 */
.address{
  font-size: 30rpx;
  border-bottom: 2rpx solid #ccc;
  position: relative;
  padding: 30rpx 0;
}
.edit{
  position: absolute;
  right: 10rpx;
  font-size: 30rpx;
  top:60rpx;
}
.address-name text{
  margin-right: 40rpx;
}
.address-deta{
  margin-top: 20rpx;
}